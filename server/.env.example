# Environment Variables for DevInsight

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration - EXAMPLE ONLY
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/devinsight?retryWrites=true&w=majority

# OpenAI Configuration - PLACEHOLDER ONLY
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# GitHub Configuration (optional)
GITHUB_TOKEN=your_github_token_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# Rate Limiting Configuration (optional - defaults are set in code)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=3

# API Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30000  # 30 seconds

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# GitHub OAuth (for future authentication features)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
