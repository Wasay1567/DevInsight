# Environment Variables for DevInsight

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/devinsight?retryWrites=true&w=majority

# OpenAI Configuration (optional - falls back to mock analysis)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# GitHub Configuration (STRONGLY RECOMMENDED)
# Without this token, you'll hit GitHub's rate limits quickly (60 requests/hour)
# With token: 5000 requests/hour
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# API Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30000  # 30 seconds

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# GitHub OAuth (for future authentication features)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
